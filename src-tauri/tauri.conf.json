{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Glassy Notes",
    "version": "0.2.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
        
      },
      "dialog": { 
        "open": true,
        "message": true,
        "save": true 
      },"fs": {
        "writeFile": true,
        "removeFile": true,
        "readFile": true,
        "scope": ["$DOCUMENT/*", "$DESKTOP/*"]
      },
      "path": {
        "all": true
      },
      "notification": {
        "all": true 
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev.suvangs0101.bundle",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Glassy Notes",
        "width": 1080,
        "height": 720,
        "visible": false
      },
      {
        "width": 800,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "url": "/splashscreen.html",
        "label": "splashscreen"
      }
    ]
  }
}
